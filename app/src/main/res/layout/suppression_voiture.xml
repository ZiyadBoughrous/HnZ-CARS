<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            android:minHeight="?attr/actionBarSize">
            <ImageButton
                android:id="@+id/previous_supression_v"
                android:layout_width="35dp"
                android:layout_height="37dp"
                android:src="@drawable/previous"
                android:background="@drawable/rounded_icons"
                android:scaleType="centerInside"
                android:layout_marginStart="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <Spinner
                android:id="@+id/spin"
                android:layout_width="40dp"
                android:layout_height="50dp" />
        </androidx.appcompat.widget.Toolbar>

        <AutoCompleteTextView
            android:id="@+id/searchByIdV"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:hint="Chercher voiture par ID"
            android:iconifiedByDefault="false"/>

        <AutoCompleteTextView
            android:id="@+id/searchByMarque"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:hint="Chercher voiture par Marque"
            android:iconifiedByDefault="false"/>



        <ImageButton
            android:id="@+id/del_voiture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@id/searchByMarque"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:background="@drawable/rounded_icons"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/supp"/>

















    </RelativeLayout>








</androidx.constraintlayout.widget.ConstraintLayout>